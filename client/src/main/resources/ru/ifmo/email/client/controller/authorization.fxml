<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="TOP_CENTER" prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.ifmo.email.client.controller.AuthorizationController">
   <MenuBar nodeOrientation="RIGHT_TO_LEFT" style="-fx-background-color: transparant;">
     <menus>
       <Menu mnemonicParsing="false" onAction="#setting">
            <graphic>
               <ImageView fx:id="imageView" fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" />
            </graphic>
       </Menu>
     </menus>
   </MenuBar>
  <HBox alignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
      <VBox alignment="CENTER">
          <children>
              <Label text="Login">
                  <font>
                      <Font name="System Bold" size="15.0" />
                  </font>
              </Label>
              <TextField fx:id="email" promptText="Email" />
              <PasswordField fx:id="password" promptText="Password">
                  <VBox.margin>
                      <Insets top="5.0" />
                  </VBox.margin></PasswordField>
            <Pane visible="false" prefHeight="0" fx:id="pane">
               <children>
                  <Label text="Wrong login or password" textFill="RED" />
               </children>
               <VBox.margin>
                  <Insets left="5.0" top="5.0" />
               </VBox.margin>
            </Pane>
              <HBox alignment="CENTER">
                  <children>
                      <Button defaultButton="true" mnemonicParsing="false" onAction="#logIn" prefWidth="202" text="Log In">
                          <HBox.margin>
                              <Insets />
                          </HBox.margin></Button>
                  </children>
                  <VBox.margin>
                      <Insets top="5.0" />
                  </VBox.margin>
              </HBox>
              <Pane>
                  <children>
                      <Hyperlink onAction="#registration" text="registration" />
                  </children>
                  <VBox.margin>
                      <Insets />
                  </VBox.margin>
              </Pane>
          </children>
      </VBox>
  </HBox>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
   </rowConstraints>
</GridPane>
