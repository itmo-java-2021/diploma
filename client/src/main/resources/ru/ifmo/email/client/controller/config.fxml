<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Tooltip?>

<AnchorPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.ifmo.email.client.controller.ConfigController">
    <GridPane alignment="CENTER" prefHeight="100.0" prefWidth="150.0">
        <VBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS">
            <TextField fx:id="host" promptText="host">
                <tooltip>
                    <Tooltip text="host"/>
                </tooltip>
            </TextField>
            <TextField fx:id="port"  promptText="port">
                <tooltip>
                    <Tooltip text="port"/>
                </tooltip>
            </TextField>
            <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </GridPane.margin>
        </VBox>
        <HBox alignment="TOP_RIGHT" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
            <Button defaultButton="true" prefWidth="52" text="ok" onAction="#save">
                <HBox.margin>
                    <Insets right="5.0" />
                </HBox.margin>
            </Button>
            <Button prefWidth="52" text="cancel" onAction="#cancel"/>
            <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </GridPane.margin>
        </HBox>
        <columnConstraints>
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>
</AnchorPane>
